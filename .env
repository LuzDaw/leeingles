# LeeIngles environment example
# Copy to .env and fill real values on your environment (do NOT commit .env)

# Database
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=traductor_app

# App
APP_BASE_URL=http://localhost/leeingles/

# External services (placeholders)
DEEPL_API_KEY=your_deepl_api_key_here
GOOGLE_TRANSLATE_KEY=your_google_api_key_here

# SMTP / Email settings (used by includes/email_service.php)
SMTP_HOST=leeingles.com
SMTP_PORT=465
SMTP_USER=info@leeingles.com
SMTP_PASS=Holamundo25__
SMTP_SECURE=ssl
SMTP_FROM_EMAIL=info@leeingles.com
SMTP_FROM_NAME=LeeIngles
SMTP_TIMEOUT=10

# Backwards-compatible names (some scripts used these older names)
EMAIL_SMTP_HOST=smtp.leeingles.com
EMAIL_SMTP_USER=info@leeingles.com
EMAIL_SMTP_PASS=Holamundo25__

# Other
CACHE_TTL_TRANSLATIONS=86400

# Local environment
APP_ENV=local
